<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Problem - View/Edit Submission</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/css/styles.css">
    <link rel="stylesheet" href="/assets/css/footer.css">
    <link rel="stylesheet" href="/assets/css/header.css">
    <style>
        #main-div {
            padding-top: 50px;
            padding-bottom: 50px;
        }
        .title-bar {
            padding: 10px;
            font-size: 18px;
            font-weight: bold;
            text-align: center;
        }
        .metadata-table, .input-data-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            margin-bottom: 20px;
        }
        .metadata-table th, .metadata-table td, .input-data-table th, .input-data-table td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: left;
        }
        .metadata-table th, .input-data-table th {
            background-color: #f0f0f0;
        }
        .template-btns {
            display: flex;
            justify-content: space-around;
            gap: 5px;
        }
        .result-chart {
            width: 100%;
            height: 150px;
            border: 1px solid #ccc;
            margin-top: 10px;
        }
        .upload-box {
            width: 100%;
            height: 150px;
            border: 1px dashed #ccc;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 10px;
            background-color: #f9f9f9;
        }
        .upload-box:hover {
            background-color: #e9e9e9;
        }
    </style>
</head>
<body>
<!-- Header -->
<header>
    <div class="container">
        <img id="small_logo" src="/assets/img/small_logo.png" alt="solveME logo" class="img-fluid">
        <p>System info: date/time, health, etc.</p>
    </div>
</header>

<div id="main-div" class="container">
    <!-- Title Bar -->
    <div class="title-bar">
        <h3>Problem Submission Management</h3>
        <p><scenario id="scenario-id"></scenario> | <solver id="solver-id"></solver> | <creator id="creator-id"></creator> | <status id="status-id">Status: <%= problemStatus %></status></p>
    </div>

    <!-- Metadata Table -->
    <table class="metadata-table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Value</th>
            <th>Description</th>
        </tr>
        </thead>
        <tbody>
        <!-- Dynamic metadata rows here -->
        <% metadata.forEach(meta => { %>
            <tr>
                <td><%= meta.name %></td>
                <td><%= meta.type %></td>
                <td><%= meta.value %></td>
                <td><%= meta.description %></td>
            </tr>
        <% }) %>
        </tbody>
    </table>

    <!-- Input Data Section -->
    <div class="input-data-section">
        <h4>Input Data</h4>
        <table class="input-data-table">
            <thead>
            <tr>
                <th>Dataset ID</th>
                <th>Uploaded</th>
                <th>Visualization</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            <!-- Dynamic input data rows -->
            <% inputData.forEach(data => { %>
                <tr>
                    <td><%= data.datasetId %></td>
                    <td><%= data.uploaded ? 'Yes' : 'No' %></td>
                    <td>
                        <% if (data.uploaded) { %>
                            <div class="result-chart" id="chart-<%= data.datasetId %>"></div>
                        <% } else { %>
                            <div class="upload-box">Upload a file</div>
                        <% } %>
                    </td>
                    <td class="template-btns">
                        <button class="btn btn-outline-primary btn-sm">Template</button>
                        <button class="btn btn-outline-success btn-sm">Upload</button>
                        <button class="btn btn-outline-info btn-sm">Download</button>
                    </td>
                </tr>
            <% }) %>
            </tbody>
        </table>
    </div>

    <!-- Done Button -->
    <div class="text-center">
        <button class="btn btn-success">Done</button>
    </div>
</div>

<!-- Footer -->
<footer class="footer-basic">
    <div class="container text-center">
        <ul class="list-inline">
            <li class="list-inline-item"><a href="/">Home</a></li>
            <li class="list-inline-item"><a href="/credits/">Credits</a></li>
            <li class="list-inline-item"><a href="/problems/">Submit</a></li>
            <li class="list-inline-item"><a href="/problems/show">Submissions</a></li>
        </ul>
        <p class="copyright">Company Name Â© 2021</p>
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

<!-- Add charting or other interactivity here -->
<script>
    // Initialize any charting for uploaded datasets
    inputData.forEach(data => {
        if (data.uploaded) {
            initializeChart('chart-' + data.datasetId, data.chartData);
        }
    });

    function initializeChart(chartId, data) {
        // Initialize charts using Chart.js, D3.js, or any other library
    }
</script>
</body>
</html>
