<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Submission Details - solveMyProblem</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/css/styles.css">
    <link rel="stylesheet" href="/assets/css/footer.css">
    <link rel="stylesheet" href="/assets/css/header.css">
    <style>
        #main-div {
            padding-top: 120px; /* Ensure the content starts below the fixed header */
            padding-bottom: 100px; /* Ensure the content is not hidden by the footer */
        }
        .title-bar {
            padding: 10px;
            font-size: 18px;
            font-weight: bold;
        }
        .search-container {
            margin-top: 20px;
        }
        .search-list {
            list-style-type: none;
            padding: 0;
            overflow-y: auto;
            max-height: 200px; /* Limit height of search list */
        }
        .list-item {
            padding: 10px;
            border-bottom: 1px solid #ccc;
        }
        .list-item:hover {
            background-color: #f0f0f0;
            cursor: pointer;
        }
        .message {
            margin-top: 20px;
            font-size: 18px;
            color: #555;
        }
        .upload-container {
            margin-top: 20px;
        }
        .success-message {
            margin-top: 20px;
            font-size: 18px;
            color: green;
        }
        .error-message {
            margin-top: 20px;
            font-size: 18px;
            color: red;
        }
    </style>
</head>
<body>
<!-- Header with logo and system info -->
<header>
    <div class="container">
        <img id="small_logo" src="/assets/img/small_logo.png" alt="solveME logo" class="img-fluid">
        <p>System info: date/time, health, etc.</p>
    </div>
</header>

<div id="main-div" class="container">
    <!-- Title Bar -->
    <div class="title-bar">
        Solver Model
    </div>

    <!-- Metadata and Input Data -->
    <div class="row search-container">
        <!-- Metadata List -->
        <div class="col">
            <div class="title-bar">Metadata</div>
            <ul id="metadata-list" class="search-list">
                <!-- Metadata items will be dynamically loaded here -->
            </ul>
        </div>
        <!-- Input Data List -->
        <div class="col">
            <div class="title-bar">Input Data</div>
            <ul id="input-data-list" class="search-list">
                <!-- Input data items will be dynamically loaded here -->
            </ul>
        </div>
    </div>


    <!-- Upload Submission Metadata Form -->
    <div class="upload-container">
        <div class="input-group">
            <input id="metadata-input" type="text" class="form-control" placeholder="Upload submission metadata" aria-label="Upload submission metadata">
            <button class="btn btn-primary" type="button" onclick="submitProblem()">Create</button>
            <button class="btn btn-secondary" type="button">Cancel</button>
        </div>
    </div>

    <!-- Success or Error Message -->
    <div id="feedback-message" class="success-message" style="display: none;">
        Scenario created successfully
    </div>
    <div id="error-message" class="error-message" style="display: none;">
        Error submitting problem.
    </div>
</div>

<!-- Footer -->
<footer class="footer-basic">
    <div class="container text-center">
        <ul class="list-inline">
            <li class="list-inline-item"><a href="/">Home</a></li>
            <li class="list-inline-item"><a href="/credits/">Credits</a></li>
            <li class="list-inline-item"><a href="/problems/">Submit</a></li>
            <li class="list-inline-item"><a href="/problems/show">Submissions</a></li>
        </ul>
        <p class="copyright">Company Name Â© 2021</p>
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

// Display execution status in real-time using WebSockets
<script>
    const socket = io();
    const executionId = '<%= executionId %>';  // Use executionId from the server

    // Listen for real-time status updates from the backend
    socket.on('executionStatus', function (data) {
        if (data.executionId === executionId) {
            document.getElementById('status').textContent = data.status;
        }
    });

    // Handle execution completion event
    socket.on('executionCompleted', function (data) {
        if (data.executionId === executionId) {
            document.getElementById('status').textContent = 'Completed';
            alert('Execution Completed: ' + JSON.stringify(data.result));
        }
    });

    // Handle execution failure event
    socket.on('executionFailed', function (data) {
        if (data.executionId === executionId) {
            document.getElementById('status').textContent = 'Failed';
            alert('Execution Failed: ' + data.error);
        }
    });
</script>

</body>
</html>
