<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Browse Problems - solveMyProblem</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/css/styles.css">
    <link rel="stylesheet" href="/assets/css/footer.css">
    <link rel="stylesheet" href="/assets/css/header.css">
    <style>
        #main-div {
            padding-top: 120px;
            padding-bottom: 100px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: center;
        }
        th {
            background-color: #f5f5f5;
        }
        .status-ready {
            color: green;
            font-weight: bold;
        }
        .status-not-ready {
            color: red;
            font-weight: bold;
        }
        .status-executed {
            color: blue;
            font-weight: bold;
        }
        .status-unknown {
            color: gray;
            font-weight: bold;
        }
        .pagination-container {
            margin-top: 20px;
            display: flex;
            justify-content: center;
        }
    </style>
</head>
<body>
<!-- Header with logo and system info -->
<header>
    <div class="container">
        <img id="small_logo" src="/assets/img/small_logo.png" alt="solveME logo" class="img-fluid">
        <p>System info: date/time, health, etc.</p>
    </div>
</header>

<div id="main-div" class="container">
    <h2>Browse Problems</h2>

    <div id="problem-table-container">
        <!-- Problem List Table -->
        <table id="problem-table">
            <thead>
            <tr>
                <th>Created On</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody id="problem-list">
            <% problems.forEach(problem => { %>
                <tr data-problem-id="<%= problem.id %>">
                    <td><%= problem.dateCreated %></td>
<!--                    <td class="status-column"> <%= problem.status %> </td>-->
                    <td class="problem-actions">
                        <a href="/problems/manage/<%= problem.id %>" class="btn btn-sm btn-primary">View/Edit</a>
<!--                        <% if (problem.status === 'executed') { %>-->
                            <a href="/problems/results/<%= problem.id %>" class="btn btn-sm btn-info">View Results</a>
<!--                        <% } else { %>-->
                            <button class="btn btn-sm btn-secondary" disabled>View Results</button>
<!--                        <% } %>-->
                        <a href="/problems/delete/<%= problem.id %>" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            <% }); %>
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <% if (pagination && pagination.totalPages > 1) { %>
        <nav aria-label="Page navigation">
            <ul class="pagination pagination-container">
                <% for (let i = 1; i <= pagination.totalPages; i++) { %>
                    <li class="page-item <%= i === pagination.currentPage ? 'active' : '' %>">
                        <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                    </li>
                <% } %>
            </ul>
        </nav>
    <% } %>
</div>

<!-- Footer -->
<footer class="footer-basic">
    <div class="container text-center">
        <ul class="list-inline">
            <li class="list-inline-item"><a href="/">Home</a></li>
            <li class="list-inline-item"><a href="/credits/">Credits</a></li>
            <li class="list-inline-item"><a href="/problems/">Submit</a></li>
            <li class="list-inline-item"><a href="/problems/show">Submissions</a></li>
        </ul>
    </div>
</footer>

